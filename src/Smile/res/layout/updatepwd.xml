<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".StartActivity" 
    android:background="@drawable/login_bg"
    >

   <include layout="@layout/public_titlebar"/>
	<RelativeLayout 
	    android:layout_below="@+id/public_title_bar"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginTop="40dip"
	    android:layout_marginLeft="30dip"
	    android:layout_marginRight="30dip"
	    >
	    <EditText 
	        android:id="@+id/current_pwd"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:password="true"
	        android:textSize="20dip"
	        android:hint="请输入你的密码"
	        android:textColor="#000"
	        android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ~`@#$%^*()_+,./?;':[]{}"
	        />
	    <EditText 
	        android:id="@+id/new_pwd"
	        android:layout_below="@+id/current_pwd"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dip"
	        android:singleLine="true"
	        android:password="true"
	        android:textSize="20dip"
	        android:hint="请输入你的新密码"
	        android:textColor="#000"
	        android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ~`@#$%^*()_+,./?;':[]{}"
	        />
	    <EditText 
	        android:id="@+id/confirm_new_pwd"
	        android:layout_below="@+id/new_pwd"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dip"
	        android:singleLine="true"
	        android:password="true"
	        android:textSize="20dip"
	        android:hint="请二次输入你的新密码"
	        android:textColor="#000"
	        android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ~`@#$%^*()_+,./?;':[]{}"
	        />
	    <Button 
	        android:id="@+id/ok"
	        android:layout_below="@+id/confirm_new_pwd"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dip"
	        android:textSize="30dip"
	        android:textColor="#000"
	         android:background="@drawable/rounded_shortmsg"
	        android:text="确    定"
	        />
	    <Button 
	        android:id="@+id/cancel"
	        android:layout_below="@+id/ok"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dip"
	        android:textSize="30dip"
	        android:textColor="#000"
	        android:text="取    消"
	        android:background="@drawable/rounded_shortmsg"
	        />
	</RelativeLayout>
</RelativeLayout>