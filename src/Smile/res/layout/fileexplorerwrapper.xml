<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/fb_view_bg">
    
    <RelativeLayout 
        android:layout_height="45dip"
        android:layout_width="fill_parent"
  		android:background="@drawable/fb_title_bg">
			<Button 
			    android:id="@+id/fileexplorer_btn_back"
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
  				android:layout_marginLeft="5dip"
  				android:layout_marginTop="5dip"
  				android:layout_marginBottom="5dip"
  				android:layout_centerVertical="true"
  				android:layout_alignParentLeft="true"
  				android:background="@drawable/fb_back_bg_selector" />
			<TextView android:id="@+id/fileexplorer_title"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_centerInParent="true"
				android:text="选择文件"
				style="@style/title_text" />
			<Button
			    android:id="@+id/fileexplorer_btn_ok"
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"	
  				android:layout_marginRight="5dip"
  				android:layout_marginTop="5dip"
  				android:layout_marginBottom="5dip"
  				android:layout_centerVertical="true"
  				android:layout_alignParentRight="true"
  				android:background="@drawable/fb_btnok_selector"		
  				/>				    
	</RelativeLayout>
	
	<ListView
	    android:id="@+id/file_explorer_list"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/fb_view_bg"
	    android:duplicateParentState="false"
	    android:listSelector="@android:color/transparent"
	    ></ListView>

</LinearLayout>