<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context=".StartActivity" 
    android:background="#c0000000"
    >
    <RelativeLayout 
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:id="@+id/edit_sinagure_rl"
          android:layout_gravity="center"
          android:layout_margin="10dip"
          >
          <EditText 
              android:id="@+id/key_edittext"
              android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:textColor="#000"
          android:textSize="22dip"
          android:gravity="top"
          android:hint="输入短语标识"
          android:layout_alignParentTop="true"
              />
          <EditText 
              android:id="@+id/value_edittext"
              android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:textColor="#000"
          android:textSize="22dip"
          android:gravity="top"
          android:hint="输入短语内容"
          android:layout_below="@+id/key_edittext"
          android:layout_marginTop="20dip"
              />
          <RelativeLayout 
              android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/value_edittext"
          android:layout_marginTop="10dip"
          android:layout_centerHorizontal="true"
          android:paddingBottom="10dip"
              >
              <Button 
                  android:id="@+id/cancel"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dip"
                  android:text="取  消"
                  android:padding="10dip"
                  android:background="@drawable/rounded_shortmsg"
	   android:textColor="#fff"
                  android:layout_alignParentLeft="true"
                  />
              <Button 
                  android:id="@+id/ok"
                  android:padding="10dip"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dip"
                  android:text="确  定"
                  android:background="@drawable/rounded_shortmsg"
	   android:textColor="#fff"
	   android:layout_toRightOf="@+id/cancel"
                  android:layout_marginLeft="20dip"
             />
          </RelativeLayout>
      </RelativeLayout>

</RelativeLayout>