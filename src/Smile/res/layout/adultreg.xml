<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/loading_bg"
    tools:context=".StartActivity" >

    <include layout="@layout/public_titlebar"
        />
    <ScrollView 
        android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@+id/public_title_bar"
        >
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="#00000000"
	    android:layout_marginLeft="15dip"
	    android:layout_marginRight="15dip"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="请输入你的注册信息"
	        android:layout_alignParentLeft="true"
	        android:textColor="#fff"
	        android:textSize="16dip"
	        android:id="@+id/login_tip"
	        />
	    <RelativeLayout 
	        android:layout_below="@+id/login_tip"
		      android:layout_marginTop="10dip"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:id="@+id/username_rl"
	        >
	    <EditText 
		      android:id="@+id/username_edittext"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		       android:textSize="20dip"
		       android:singleLine="true"
		       android:layout_centerHorizontal="true"
		      android:layout_centerVertical="true"
		      android:paddingLeft="60dip"
		      /> 
		 <TextView 
	        android:layout_width="40dip"
	        android:layout_height="wrap_content"
	        android:text="真实姓名"
	        android:layout_alignParentLeft="true"
	        android:textColor="#000"
	        android:textSize="16dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="15dip"
	        />
		 </RelativeLayout>
		 <RelativeLayout 
	        android:layout_below="@+id/username_rl"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:id="@+id/idnumber_rl"
	        >
	    <EditText 
		      android:id="@+id/id_number_edittext"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		       android:textSize="20dip"
		       android:singleLine="true"
		       android:layout_centerHorizontal="true"
		      android:layout_centerVertical="true"
		      android:paddingLeft="60dip"
		      android:digits="1234567890xX"
		      /> 
		 <TextView 
	        android:layout_width="40dip"
	        android:layout_height="wrap_content"
	        android:text="身份证号"
	        android:layout_alignParentLeft="true"
	        android:textColor="#000"
	        android:textSize="16dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="15dip"
	        />
		 </RelativeLayout>
		 <RelativeLayout 
	        android:layout_below="@+id/idnumber_rl"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:id="@+id/pwd_rl"
		      android:layout_marginTop="20dip"
	        >
	    <EditText 
		      android:id="@+id/pwd_edittext"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		       android:textSize="20dip"
		       android:singleLine="true"
		       android:layout_centerHorizontal="true"
		      android:layout_centerVertical="true"
		      android:password="true"
		      android:paddingLeft="60dip"
		      android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ~`@#$%^*()_+,./?;':[]{}"
		      /> 
		 <TextView 
	        android:layout_width="40dip"
	        android:layout_height="wrap_content"
	        android:text="登录密码"
	        android:layout_alignParentLeft="true"
	        android:textColor="#000"
	        android:textSize="16dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="15dip"
	        />
		 </RelativeLayout>
		 
		 <RelativeLayout 
	        android:layout_below="@+id/pwd_rl"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:id="@+id/confirm_pwd_rl"
	        >
	    <EditText 
		      android:id="@+id/confirm_pwd_edittext"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		       android:textSize="20dip"
		       android:singleLine="true"
		       android:layout_centerHorizontal="true"
		      android:layout_centerVertical="true"
		      android:password="true"
		      android:paddingLeft="60dip"
		      android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ~`@#$%^*()_+,./?;':[]{}"
		      /> 
		 <TextView 
	        android:layout_width="40dip"
	        android:layout_height="wrap_content"
	        android:text="确认密码"
	        android:layout_alignParentLeft="true"
	        android:textColor="#000"
	        android:textSize="16dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="15dip"
	        />
		 </RelativeLayout>
		 <RelativeLayout 
		     android:layout_below="@+id/confirm_pwd_rl"
		     android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_marginTop="20dip"
		      android:id="@+id/chile_info_rl"
		     >
		 <RelativeLayout 
		    
		    android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_marginLeft="15dip"
		      android:layout_marginRight="50dip"
		      
		      android:id="@+id/child_id_rl1"
		    >
		<EditText 
		      android:id="@+id/child_id1"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		       android:textSize="20dip"
		       android:singleLine="true"
		       android:hint="请添加您小孩的ID"
		      android:layout_toLeftOf="@+id/add1"
		      android:phoneNumber="true"
		      android:digits="1234567890"
		      android:layout_centerVertical="true"
		      /> 
   		 <Button 
			android:layout_centerVertical="true"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:textColor="#fff"
		     android:textSize="26dip"
		     android:text="添加"
		     android:layout_alignParentRight="true"
		     android:id="@+id/add1"
		     />
   		 </RelativeLayout>
   		 <RelativeLayout 
		    android:layout_below="@+id/child_id_rl1"
		    android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_marginLeft="15dip"
		      android:layout_marginRight="50dip"
		      android:layout_marginTop="20dip"
		      android:visibility="gone"
		      android:id="@+id/child_id_rl2"
		    >
		<EditText 
		      android:id="@+id/child_id2"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		       android:textSize="20dip"
		       android:singleLine="true"
		       android:hint="请添加您小孩的ID"
		      android:layout_toLeftOf="@+id/add2"
		      android:phoneNumber="true"
		      android:digits="1234567890"
		      android:layout_centerVertical="true"
		      /> 
   		 <Button 
			android:layout_centerVertical="true"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:textColor="#fff"
		     android:textSize="26dip"
		     android:text="添加"
		     android:layout_alignParentRight="true"
		     android:id="@+id/add2"
		     />
   		 </RelativeLayout>
   		 <RelativeLayout 
		    android:layout_below="@+id/child_id_rl2"
		    android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_marginLeft="15dip"
		      android:layout_marginRight="50dip"
		      android:layout_marginTop="20dip"
		      android:visibility="gone"
		      android:id="@+id/child_id_rl3"
		    >
		<EditText 
		      android:id="@+id/child_id3"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		       android:textSize="20dip"
		       android:singleLine="true"
		       android:hint="请添加您小孩的ID"
		      android:layout_toLeftOf="@+id/add3"
		      android:phoneNumber="true"
		      android:digits="1234567890"
		      android:layout_centerVertical="true"
		      /> 
   		 <Button 
			android:layout_centerVertical="true"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:textColor="#fff"
		     android:textSize="26dip"
		     android:text="添加"
		     android:layout_alignParentRight="true"
		     android:id="@+id/add3"
		     />
   		 </RelativeLayout>
   		 
   		  <RelativeLayout 
		    android:layout_below="@+id/child_id_rl3"
		    android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_marginLeft="15dip"
		      android:layout_marginRight="50dip"
		      android:layout_marginTop="20dip"
		      android:visibility="gone"
		      android:id="@+id/child_id_rl4"
		    >
		<EditText 
		      android:id="@+id/child_id4"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		       android:textSize="20dip"
		       android:singleLine="true"
		       android:hint="请添加您小孩的ID"
		      android:layout_toLeftOf="@+id/add4"
		      android:phoneNumber="true"
		      android:digits="1234567890"
		      android:layout_centerVertical="true"
		      /> 
   		 <Button 
			android:layout_centerVertical="true"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:textColor="#fff"
		     android:textSize="26dip"
		     android:text="添加"
		     android:layout_alignParentRight="true"
		     android:id="@+id/add4"
		     />
   		 </RelativeLayout>
   		 <RelativeLayout 
		    android:layout_below="@+id/child_id_rl4"
		    android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layout_marginLeft="15dip"
		      android:layout_marginRight="50dip"
		      android:layout_marginTop="20dip"
		      android:visibility="gone"
		      android:id="@+id/child_id_rl5"
		    >
		<EditText 
		      android:id="@+id/child_id5"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		       android:textSize="20dip"
		       android:singleLine="true"
		       android:hint="请添加您小孩的ID"
		      android:layout_toLeftOf="@+id/add5"
		      android:phoneNumber="true"
		      android:digits="1234567890"
		      android:layout_centerVertical="true"
		      /> 
   		 <Button 
			android:layout_centerVertical="true"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:textColor="#fff"
		     android:textSize="26dip"
		     android:text="添加"
		     android:layout_alignParentRight="true"
		     android:visibility="invisible"
		     android:id="@+id/add5"
		     />
   		 </RelativeLayout>
   		 </RelativeLayout>
		 <LinearLayout 
	        android:layout_below="@+id/chile_info_rl"
		      android:layout_marginTop="10dip"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:orientation="horizontal"
				android:id="@+id/agree_rl"
	        >
		     <CheckBox 
		         android:id="@+id/agree_checkbox"
		         android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:layout_gravity="center_vertical"
		      android:checked="true"
		         />
		     <TextView 
		         android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		      android:text="已阅读并同意"
		      android:layout_gravity="center_vertical"
		      android:textSize="14dip"
		         />
		     <TextView 
		         android:id="@+id/rule"
		         android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:textColor="#fff"
		      android:text="使用条款和隐私政策"
		      android:textSize="14dip"
		      android:layout_gravity="center_vertical"
		         />
		 </LinearLayout>
		 <Button 
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     android:text="下一步"
		     android:textColor="#000"
		     android:textSize="24dip"
		     android:layout_marginLeft="20dip"
		     android:layout_marginRight="20dip"
		     android:layout_below="@+id/agree_rl"
		     android:layout_marginTop="20dip"
		     android:id="@+id/nextstep"
		     />
	</RelativeLayout>
	</ScrollView>
</RelativeLayout>