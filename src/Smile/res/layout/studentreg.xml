<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bg"
    tools:context=".StartActivity" >

    <include layout="@layout/public_titlebar"
        />
    <ScrollView 
        android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@+id/public_title_bar"
        >
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="#00000000"
	    android:layout_marginLeft="15dip"
	    android:layout_marginRight="15dip"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="请输入你的注册信息"
	        android:layout_alignParentLeft="true"
	        android:textColor="#fff"
	        android:textSize="16dip"
	        android:id="@+id/login_tip"
	        />
	    <RelativeLayout 
	        android:background="#fff"
	        android:layout_below="@+id/login_tip"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/account_layout"
	        >
	    <RelativeLayout 
	        
		      android:layout_marginTop="10dip"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:id="@+id/username_rl"
		      
	        >
	    <EditText 
		      android:id="@+id/account_edittext"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		       android:textSize="20dip"
		       android:singleLine="true"
		       android:layout_centerHorizontal="true"
		      android:layout_centerVertical="true"
		      android:paddingLeft="60dip"
		      android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@."
		      /> 
		 <TextView 
	        android:layout_width="40dip"
	        android:layout_height="wrap_content"
	        android:text="登录帐号"
	        android:layout_alignParentLeft="true"
	        android:textColor="#000"
	        android:textSize="16dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="15dip"
	        />
		 </RelativeLayout>
		 <RelativeLayout 
	        android:layout_below="@+id/username_rl"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:id="@+id/idnumber_rl"
	        >
	    <EditText 
		      android:id="@+id/realname_edittext"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		       android:textSize="20dip"
		       android:singleLine="true"
		       android:layout_centerHorizontal="true"
		      android:layout_centerVertical="true"
		      android:paddingLeft="60dip"
		      /> 
		 <TextView 
	        android:layout_width="40dip"
	        android:layout_height="wrap_content"
	        android:text="真实姓名"
	        android:layout_alignParentLeft="true"
	        android:textColor="#000"
	        android:textSize="16dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="15dip"
	        />
		 </RelativeLayout>
		 <RelativeLayout 
	        android:layout_below="@+id/idnumber_rl"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:id="@+id/pwd_rl"
		      android:layout_marginTop="20dip"
	        >
	    <EditText 
		      android:id="@+id/studentid_edittext"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		       android:textSize="20dip"
		       android:singleLine="true"
		       android:layout_centerHorizontal="true"
		      android:layout_centerVertical="true"
		      android:paddingLeft="60dip"
		      android:digits="1234567890"
		      /> 
		 <TextView 
	        android:layout_width="40dip"
	        android:layout_height="wrap_content"
	        android:text="学生ID"
	        android:layout_alignParentLeft="true"
	        android:textColor="#000"
	        android:textSize="16dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="15dip"
	        />
		 </RelativeLayout>
		 </RelativeLayout>
		 <RelativeLayout 
	        android:background="#fff"
	        android:layout_below="@+id/account_layout"
	        android:layout_marginTop="15dip"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/city_region_layout"
	        >
		  <LinearLayout 
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     android:orientation="horizontal"
		     android:id="@+id/province_layout"
		     >
		 <TextView
		     android:text="所在省"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:textSize="16dip"
		     android:layout_gravity="center_vertical"
		     android:textColor="#000"
		     />
		 <Spinner 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:id="@+id/province" 
      /> 
      </LinearLayout>
		 <LinearLayout 
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     android:orientation="horizontal"
		     android:id="@+id/city_layout"
		     android:layout_below="@+id/province_layout"
		     >
		 <TextView
		     android:text="所在市"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:textSize="16dip"
		     android:layout_gravity="center_vertical"
		     android:textColor="#000"
		     />
		 <Spinner 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:id="@+id/city" 
      /> 
      </LinearLayout>
       <LinearLayout 
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     android:orientation="horizontal"
		     android:id="@+id/region_layout"
		     android:layout_below="@+id/city_layout"
		     >
		 <TextView
		     android:text="区/县"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:textSize="16dip"
		     android:layout_gravity="center_vertical"
		     android:textColor="#000"
		     />
		 <Spinner 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:id="@+id/region" 
      /> 
      </LinearLayout>
		     
		     </RelativeLayout>
		     
		 <RelativeLayout 
	        android:background="#fff"
	        android:layout_below="@+id/city_region_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/pwd_layout"
	        >
	    <RelativeLayout 
	        
		      android:layout_marginTop="10dip"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:id="@+id/username_rl"
		      
	        >
	    <EditText 
		      android:id="@+id/pwd_edittext"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		       android:textSize="20dip"
		       android:singleLine="true"
		       android:password="true"
		       android:layout_centerHorizontal="true"
		      android:layout_centerVertical="true"
		      android:paddingLeft="60dip"
		      android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ~`@#$%^*()_+,./?;':[]{}"
		      /> 
		 <TextView 
	        android:layout_width="40dip"
	        android:layout_height="wrap_content"
	        android:text="登录密码"
	        android:layout_alignParentLeft="true"
	        android:textColor="#000"
	        android:textSize="16dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="15dip"
	        />
		 </RelativeLayout>
		 <RelativeLayout 
	        android:layout_below="@+id/username_rl"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:id="@+id/idnumber_rl"
	        >
	    <EditText 
		      android:id="@+id/confirmpwd_edittext"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		       android:textSize="20dip"
		       android:singleLine="true"
		       android:layout_centerHorizontal="true"
		      android:layout_centerVertical="true"
		      android:paddingLeft="60dip"
		      android:password="true"
		      android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ~`@#$%^*()_+,./?;':[]{}"
		      /> 
		 <TextView 
	        android:layout_width="40dip"
	        android:layout_height="wrap_content"
	        android:text="确认密码"
	        android:layout_alignParentLeft="true"
	        android:textColor="#000"
	        android:textSize="16dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="15dip"
	        />
		 </RelativeLayout>
		 </RelativeLayout>
	    
		 <Button 
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     android:text="下一步"
		     android:textColor="#000"
		     android:textSize="24dip"
		     android:layout_marginLeft="20dip"
		     android:layout_marginRight="20dip"
		     android:layout_below="@+id/pwd_layout"
		     android:layout_marginTop="20dip"
		     android:id="@+id/nextstep"
		     />
	</RelativeLayout>
	</ScrollView>
</RelativeLayout>