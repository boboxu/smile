<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/loading_bg"
    tools:context=".StartActivity" >

    <include layout="@layout/public_titlebar"
        />
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="#00000000"
	    android:layout_below="@+id/public_title_bar"
	    android:layout_marginLeft="15dip"
	    android:layout_marginRight="15dip"
	    android:layout_marginTop="20dip"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="请输入你的微校帐号及密码"
	        android:layout_alignParentLeft="true"
	        android:textColor="#fff"
	        android:textSize="16dip"
	        android:id="@+id/login_tip"
	        />
	    <RelativeLayout 
	        android:layout_below="@+id/login_tip"
		      android:layout_marginTop="10dip"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:id="@+id/username_rl"
	        >
	    <EditText 
		      android:id="@+id/username_edittext"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		       android:textSize="20dip"
		       android:singleLine="true"
		       android:layout_centerHorizontal="true"
		      android:layout_centerVertical="true"
		      android:hint="微校号/手机号"
		      android:paddingLeft="60dip"
		      android:phoneNumber="true"
		      android:digits="1234567890"
		      
		      /> 
		 <TextView 
	        android:layout_width="40dip"
	        android:layout_height="wrap_content"
	        android:text="帐号"
	        android:layout_alignParentLeft="true"
	        android:textColor="#000"
	        android:textSize="16dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="15dip"
	        />
		 </RelativeLayout>
		 <RelativeLayout 
	        android:layout_below="@+id/username_rl"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:id="@+id/pwd_rl"
	        >
	    <EditText 
		      android:id="@+id/pwd_edittext"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		       android:textSize="20dip"
		       android:singleLine="true"
		       android:layout_centerHorizontal="true"
		      android:layout_centerVertical="true"
		      android:password="true"
		      android:paddingLeft="60dip"
		      /> 
		 <TextView 
	        android:layout_width="40dip"
	        android:layout_height="wrap_content"
	        android:text="密码"
	        android:layout_alignParentLeft="true"
	        android:textColor="#000"
	        android:textSize="16dip"
			android:layout_centerVertical="true"
			android:layout_marginLeft="15dip"
	        />
		 </RelativeLayout>
		 
		 <LinearLayout 
	        android:layout_below="@+id/pwd_rl"
		      android:layout_marginTop="10dip"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:orientation="horizontal"
				android:id="@+id/agree_rl"
	        >
		     <CheckBox 
		         android:id="@+id/agree_checkbox"
		         android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:layout_gravity="center_vertical"
		      android:checked="true"
		         />
		     <TextView 
		         android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:textColor="#000"
		      android:text="已阅读并同意"
		      android:layout_gravity="center_vertical"
		      android:textSize="14dip"
		         />
		     <TextView 
		         android:id="@+id/rule"
		         android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:textColor="#fff"
		      android:text="使用条款和隐私政策"
		      android:textSize="14dip"
		      android:layout_gravity="center_vertical"
		         />
		 </LinearLayout>
		 <Button 
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     android:text="登  录"
		     android:textColor="#000"
		     android:textSize="24dip"
		     android:layout_marginLeft="20dip"
		     android:layout_marginRight="20dip"
		     android:layout_below="@+id/agree_rl"
		     android:layout_marginTop="20dip"
		     android:id="@+id/login"
		     />
		 <LinearLayout 
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     android:layout_alignParentBottom="true"
		     android:orientation="horizontal"
		     >
		    <Button 
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     android:text="家长注册"
		     android:textColor="#000"
		     android:id="@+id/regBtn"
		     android:textSize="20dip"
		     android:layout_weight="1"
		     /> 
		    <Button 
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     android:text="忘记密码"
		     android:textColor="#000"
		     android:id="@+id/forgetPwdBtn"
		     android:textSize="20dip"
		     android:layout_weight="1"
		     />  
		 </LinearLayout>
	</RelativeLayout>
</RelativeLayout>