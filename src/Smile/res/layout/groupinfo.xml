<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".StartActivity" 
    android:background="@drawable/login_bg"
    android:id="@+id/parent_layout"
    >
    <include layout="@layout/public_titlebar"/>
    <ScrollView 
        android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@+id/public_title_bar"
        >
        <RelativeLayout 
            android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:paddingBottom="20dip"
            >
       <TextView 
           android:id="@+id/groupid"
           android:text="校友群:7487837"
           android:textColor="#fff"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_alignParentLeft="true"
           android:layout_marginTop="20dip"
           />     
	<LinearLayout 
	    android:id="@+id/layout1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_below="@+id/groupid"
	    android:background="#fff"
	    android:layout_marginTop="10dip"
	    >
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/userinfo"
	    android:paddingBottom="10dip"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="15dip"
	            android:text="我的群名片"
	            android:id="@+id/group_nick_tip"
	            android:textSize="18dip"
	            android:textColor="#000"
	            />
	        <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@+id/group_nick_tip"
	            android:layout_marginLeft="5dp"
	            android:layout_marginRight="15dip"
	            android:text="任盈盈"
	            android:textSize="18dip"
	            android:textColor="#000"
	            android:singleLine="true"
	            android:ellipsize="marquee"
	            android:gravity="right"
	            android:id="@+id/groupnickname"
	            />
	    </RelativeLayout>
	    <ImageView 
	        android:layout_width="fill_parent"
	        android:layout_height="1px"
	        android:src="#000"
	        />
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/group_data"
	    android:paddingTop="10dip"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="15dip"
	            android:text="群资料"
	            android:textSize="18dip"
	            android:textColor="#000"
	            />
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dip"
	            android:src="@drawable/setting_right_icon"
	            />
	    </RelativeLayout>
	</LinearLayout>
   
	<LinearLayout 
	    android:id="@+id/layout2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_below="@+id/layout1"
	    android:background="#fff"
	    android:layout_marginTop="30dip"
	    	    android:paddingTop="10dip"
	    android:paddingBottom="10dip"
	    
	    >
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/about"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="15dip"
	            android:text="群成员"
	            android:textSize="18dip"
	            android:textColor="#000"
	            />
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dip"
	            android:text="13人"
	            android:textSize="18dip"
	            android:textColor="#000"
	            />
	    </RelativeLayout>
	     <ImageView 
	        android:layout_width="fill_parent"
	        android:layout_height="1px"
	        android:src="#000"
	        />
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/about"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="15dip"
	            android:text="邀请群成员"
	            android:textSize="18dip"
	            android:textColor="#000"
	            />
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dip"
	            android:src="@drawable/setting_right_icon"
	            />
	    </RelativeLayout>
	</LinearLayout>
	
	<LinearLayout 
	    android:id="@+id/layout3"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_below="@+id/layout2"
	    android:background="#fff"
	    android:layout_marginTop="30dip"
	    >
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/logout"
	    android:paddingTop="10dip"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="15dip"
	            android:text="群消息设置"
	            android:textSize="18dip"
	            android:textColor="#000"
	            />
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dip"
	            android:src="@drawable/setting_right_icon"
	            />
	    </RelativeLayout>
	    <ImageView 
	        android:layout_width="fill_parent"
	        android:layout_height="1px"
	        android:src="#000"
	        />
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/clear_chat_history"
	    android:paddingBottom="10dip"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="15dip"
	            android:text="清空聊天记录"
	            android:textSize="18dip"
	            android:textColor="#000"
	            />
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dip"
	            android:src="@drawable/setting_right_icon"
	            />
	    </RelativeLayout>
	    <ImageView 
	        android:layout_width="fill_parent"
	        android:layout_height="1px"
	        android:src="#000"
	        />
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/logout"
	    android:paddingTop="10dip"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="15dip"
	            android:text="扬声器播放语音"
	            android:textSize="18dip"
	            android:textColor="#000"
	            />
	        <ToggleButton 
	            android:id="@+id/speakersoundbtn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dip"
	            />
	    </RelativeLayout>
	</LinearLayout>
	<Button 
	    android:layout_below="@+id/layout3"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="30dip"
	    android:layout_marginRight="30dip"
	    android:layout_marginTop="20dip"
	    android:id="@+id/quit_group"
	    android:text="退出该群"
	    android:textSize="30dip"
	    android:layout_marginBottom="20dip"
	    />
	</RelativeLayout>
	</ScrollView>
</RelativeLayout>